<UserControl x:Class="Calculator.SidebarView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Calculator"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance Type=local:SidebarView}"
			 d:DesignHeight="800" d:DesignWidth="1100">
	<UserControl.Resources>
		<Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
		<Style x:Key="LabelStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
			<Setter Property="Foreground" Value="#888888"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontStyle" Value="Italic"/>
			<Setter Property="Margin" Value="0,0,0,10"/>
		</Style>
		<Style x:Key="ValueStyle" TargetType="TextBlock"  BasedOn="{StaticResource BaseTextBlockStyle}">
			<Setter Property="FontSize" Value="36"/>
		</Style>
		<Style x:Key="Card" TargetType="StackPanel">
			<Setter Property="Margin" Value="30"/>
		</Style>
	</UserControl.Resources>
	<StackPanel MaxWidth="1000" Margin="0,30,0,0">
		<TextBlock Text="Account Value" FontSize="64" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,80,0,0"/>
		<WrapPanel HorizontalAlignment="Center"  Orientation="Horizontal" >
			<StackPanel Margin="30,0">
				<TextBlock Text="{local:MoneyBinding TotalSpentIfDiscountedPrice}" d:Text="$399" FontSize="48" FontWeight="Bold" Foreground="#00FF00"/>
				<TextBlock Text="Lowest prices" Foreground="#888888" HorizontalAlignment="Center" />
			</StackPanel>
			<StackPanel Margin="30,0">
				<TextBlock Text="{local:MoneyBinding TotalSpentIfRegularPrice}" d:Text="$4,999" Foreground="#ff7b5a" FontSize="48" FontWeight="Bold"/>
				<TextBlock Text="Today's prices" Foreground="#888888" HorizontalAlignment="Center" />
			</StackPanel>
		</WrapPanel>
		<StackPanel Margin="100,0">
			<DockPanel>
				<TextBlock Text="{Binding GamesPlayedInfo, Mode=OneTime}" d:Text="{}30 out of 120 games played" DockPanel.Dock="Left" TextAlignment="Left" />
				<TextBlock Text="{Binding PlayedGamesRatio, Mode=OneTime, StringFormat={}{0:P1}}" d:Text="25%"  DockPanel.Dock="Right" TextAlignment="Right" />
			</DockPanel>
			<ProgressBar Height="10" Value="{Binding PlayedGamesRatio, Mode=OneTime}" Maximum="1">
				<ProgressBar.Resources>
					<Style TargetType="{x:Type Border}">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</ProgressBar.Resources>
			</ProgressBar>
		</StackPanel>
		<WrapPanel HorizontalAlignment="Center">
			<StackPanel Style="{StaticResource Card}">
				<TextBlock Text="Average price" Style="{StaticResource LabelStyle}"/>
				<TextBlock Text="{local:MoneyBinding AveragePrice}" Style="{StaticResource ValueStyle}"/>
			</StackPanel>
			<StackPanel Style="{StaticResource Card}">
				<TextBlock Text="Average price per hour" Style="{StaticResource LabelStyle}"/>
				<TextBlock Text="{local:MoneyBinding PricePerHour}" Style="{StaticResource ValueStyle}"/>
			</StackPanel>
			<StackPanel Style="{StaticResource Card}">
				<TextBlock Text="Total playtime" Style="{StaticResource LabelStyle}"/>
				<TextBlock Text="{Binding TotalPlaytime, Converter={StaticResource PlaytimeConverter}, Mode=OneTime}" Style="{StaticResource ValueStyle}"/>
			</StackPanel>
		</WrapPanel>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<StackPanel>
				<DataGrid>
				</DataGrid>
			</StackPanel>
			<StackPanel>
			</StackPanel>
		</Grid>
	</StackPanel>
</UserControl>