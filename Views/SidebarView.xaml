<UserControl x:Class="Calculator.SidebarView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Calculator"
			 mc:Ignorable="d"
			 d:DesignHeight="800" d:DesignWidth="1100">
	<UserControl.Resources>
		<Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
		<Style x:Key="LabelStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
			<Setter Property="Foreground" Value="#888888"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontStyle" Value="Italic"/>
			<Setter Property="Margin" Value="0,0,0,10"/>
		</Style>
		<Style x:Key="ValueStyle" TargetType="TextBlock"  BasedOn="{StaticResource BaseTextBlockStyle}">
			<Setter Property="FontSize" Value="36"/>
		</Style>
		<Style x:Key="Card" TargetType="StackPanel">
			<Setter Property="Margin" Value="30"/>
		</Style>
	</UserControl.Resources>
	<StackPanel MaxWidth="1000" Margin="0,100,0,0">
		<TextBlock Text="Account Value" FontSize="28" HorizontalAlignment="Center"/>
		<WrapPanel HorizontalAlignment="Center"  Orientation="Horizontal" >
			<StackPanel Margin="30,0">
				<TextBlock Text="{local:MoneyBinding TotalSpentIfDiscountedPrice}" Foreground="#00ff00" FontSize="48" FontWeight="Bold"/>
				<TextBlock Text="Lowest prices" Foreground="#888888" HorizontalAlignment="Center" />
			</StackPanel>
			<StackPanel Margin="30,0">
				<TextBlock Text="{local:MoneyBinding TotalSpentIfRegularPrice}" Foreground="#ff7b5a" FontSize="48" FontWeight="Bold"/>
				<TextBlock Text="Today's prices" Foreground="#888888" HorizontalAlignment="Center" />
			</StackPanel>
		</WrapPanel>
		<StackPanel Margin="100,0">
			<TextBlock Text="{Binding GamesPlayedInfo, Mode=OneTime}" />
			<Border CornerRadius="10" BorderThickness="1">
				<ProgressBar Height="10" Value="{Binding PlayedGamesRatio, Mode=OneTime}" Maximum="1" />
			</Border>
		</StackPanel>
		<WrapPanel HorizontalAlignment="Center">
			<StackPanel Style="{StaticResource Card}">
				<TextBlock Text="Average price" Style="{StaticResource LabelStyle}"/>
				<TextBlock Text="{local:MoneyBinding AveragePrice}" Style="{StaticResource ValueStyle}"/>
			</StackPanel>
			<StackPanel Style="{StaticResource Card}">
				<TextBlock Text="Average price per hour" Style="{StaticResource LabelStyle}"/>
				<TextBlock Text="{local:MoneyBinding PricePerHour}" Style="{StaticResource ValueStyle}"/>
			</StackPanel>
			<StackPanel Style="{StaticResource Card}">
				<TextBlock Text="Total Playtime" Style="{StaticResource LabelStyle}"/>
				<TextBlock Text="{Binding TotalPlaytime, Converter={StaticResource PlaytimeConverter}, Mode=OneTime}" Style="{StaticResource ValueStyle}"/>
			</StackPanel>
		</WrapPanel>
	</StackPanel>
</UserControl>