<UserControl x:Class="Calculator.Views.ColorPicker"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:sys="clr-namespace:System;assembly=mscorlib"
			 xmlns:cp="clr-namespace:akr.WPF.Controls;assembly=akr.WPF.Controls.ColorPicker"
			 xmlns:local="clr-namespace:Calculator.Views"
			 d:DataContext="{d:DesignInstance Type=local:ColorPicker}"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<sys:Boolean x:Key="True">True</sys:Boolean>
		<sys:Boolean x:Key="False">False</sys:Boolean>
	</UserControl.Resources>
	<DockPanel>
		<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Command="{Binding ReturnCallback}" CommandParameter="{StaticResource True}" Content="Save" />
			<Button Command="{Binding ReturnCallback}" CommandParameter="{StaticResource False}" Content="Cancel" />
		</StackPanel> 
		<cp:ColorPicker Name="Picker" />
	</DockPanel>
</UserControl>
